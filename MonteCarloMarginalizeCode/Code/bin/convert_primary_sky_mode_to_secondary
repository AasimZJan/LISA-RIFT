#! /usr/bin/env python
import RIFT.lalsimutils as lsu
import numpy as np
from argparse import ArgumentParser
from RIFT.LISA.utils.utils import get_secondary_mode_for_skylocation

parser = ArgumentParser()

parser.add_argument("--lisa-reference-time", help = "LISA coalescence time")
parser.add_argument("--overlap-grid", help = "path to overlap grid for which you want to convert the primary sky mode to secondary sky mode.")

opts = parser.parse_args()

# Load the grid
Plist = lsu.xml_to_ChooseWaveformParams_array(opts.overlap_grid)
t_c = float(opts.lisa_reference_time)
# Loop over the points and convert the primary mode to secondary mode.
for i in np.arange(len(Plist)):
    P = Plist[i]
    t_throw, lamda_sec, beta_sec, psi_throw =  get_secondary_mode_for_skylocation(t_c, P.phi, P.theta, 0.0) 
    P.phi, P.theta = lamda_sec, beta_sec
# Overwrite so ILE will use it
lsu.ChooseWaveformParams_array_to_xml(Plist, opts.overlap_grid)